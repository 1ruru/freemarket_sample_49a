#addresses__new
  = form_with model:[current_user, @address], local: true do |f|
    %h2 会員情報入力
    .field
      = f.label :family_name
      %br/
      = f.text_field :family_name, placeholder: "例)山田"
    .field
      = f.label :first_name
      %br/
      = f.text_field :first_name, placeholder: "例)彩"
    .field
      = f.label :family_name_kana
      %br/
      = f.text_field :family_name_kana, placeholder: "例)ヤマダ"
    .field
      = f.label :first_name_kana
      %br/
      = f.text_field :first_name_kana, placeholder: "例)アヤ"
    .field
      = f.label :postal_code
      %br/
      = f.text_field :postal_code, placeholder: "例)123-4567"
    .field
      = f.label :prefecture
      %br/
      = f.select :prefecture, ["北海道","青森県","岩手県","宮城県","秋田県","山形県","福島県",
                              "茨城県","栃木県","群馬県","埼玉県","千葉県","東京都","神奈川県",
                              "新潟県","富山県","石川県","福井県","山梨県","長野県","岐阜県",
                              "静岡県","愛知県","三重県","滋賀県","京都府","大阪府","兵庫県",
                              "奈良県","和歌山県","鳥取県","島根県","岡山県","広島県","山口県",
                              "徳島県","香川県","愛媛県","高知県","福岡県","佐賀県","長崎県",
                              "熊本県","大分県","宮崎県","鹿児島県","沖縄県"], {}
    .field
      = f.label :city
      %br/
      = f.text_field :city, placeholder: "例)横浜市緑区"
    .field
      = f.label :house
      %br/
      = f.text_field :house, placeholder: "例)青山1-1-1"
    .field
      = f.label :building
      %br/
      = f.text_field :building, placeholder: "例)柳ビル103"
    .field
      = f.label :phone
      %br/
      = f.text_field :phone, placeholder: "例)09012345678"
    
    .actions
      =f.submit '次へ進む'
