#users_information
  .main-content
    .header.mypape_header
      = render 'items/header',layout: 'application'
    %nav.bread-crumbs
      %ul
        %li
          %a
            %span メルカリ
          =fa_icon 'chevron-right',class:"icon-arrow"
        %li.nowpage
          %span マイページ

    %main.mypage-container
      //left menu
      = render partial: 'mypage-left'

      .right-content
        .heading
          本人情報の登録
        .main
          .nav
            お客さまの本人情報をご登録ください。
            %br/
            登録されたお名前・生年月日を変更する場合、本人確認書類の提出が必要になります。
            =link_to '', class:"nav-link link-mercari-blue" do
              ='本人確認書類のアップロードについて'
              =fa_icon 'chevron-right',class:"icon-arrow"
          .edit-information
            =form_for current_user, url: information_update_user_path(current_user), method: :put do |f|
              .form-element
                %label お名前
                %br/
                ="#{current_user.family_name} #{current_user.first_name}"
              .form-element
                %label お名前カナ
                %br/
                ="#{current_user.family_name_kana} #{current_user.first_name_kana}"
              .form-element
                %label 生年月日
                %br/
                =current_user.birthday.strftime("%Y/%m/%d")
              .edit-information--postal_code.form-element
                = f.label :postal_code
                .input-any 任意
                %br/
                = f.text_field :postal_code, placeholder: "例)123-4567"
              .edit-information--prefecture.form-element
                = f.label :prefecture
                .input-any 任意
                %br/
                = f.select :prefecture, ["北海道","青森県","岩手県","宮城県","秋田県","山形県","福島県",
                              "茨城県","栃木県","群馬県","埼玉県","千葉県","東京都","神奈川県",
                              "新潟県","富山県","石川県","福井県","山梨県","長野県","岐阜県",
                              "静岡県","愛知県","三重県","滋賀県","京都府","大阪府","兵庫県",
                              "奈良県","和歌山県","鳥取県","島根県","岡山県","広島県","山口県",
                              "徳島県","香川県","愛媛県","高知県","福岡県","佐賀県","長崎県",
                              "熊本県","大分県","宮崎県","鹿児島県","沖縄県"], {}
              .edit-information--city.form-element
                = f.label :city
                .input-any 任意
                %br/
                = f.text_field :city, placeholder: "例)横浜市緑区"
              .edit-information--house.form-element
                = f.label :house
                .input-any 任意
                %br/
                = f.text_field :house, placeholder: "例)青山1-1-1"
              .edit-information--building.form-element
                = f.label :building
                .input-any 任意
                %br/
                = f.text_field :building, placeholder: "例)柳ビル103"
              .edit-information--submit.form-element
                = f.submit

              =link_to '',class:"nav-link link-mercari-blue" do
                ='本人情報の確認について'
                =fa_icon 'chevron-right',class:"icon-arrow"

    .footer
      = render "items/footer",layout: 'application'