#users__registrations_new
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = render "devise/shared/error_messages", resource: resource
    #form--user-info
      %h2 会員情報入力
      .field
        = f.label :nickname
        %br/
        = f.text_field :nickname, placeholder: "例)メルカリ太郎"
      .field
        = f.label :email
        %br/
        = f.email_field :email, autofocus: true, placeholder: "PC・携帯どちらでも可"
      .field
        = f.label :password
        %br/
        = f.password_field :password, placeholder: "6文字以上"
      .field
        = f.label :password_confirmation
        %br/
        = f.password_field :password_confirmation, placeholder: "6文字以上"
      .field
        = f.label :family_name
        %br/
        = f.text_field :family_name, placeholder: "例)山田"
      .field
        = f.label :first_name
        %br/
        = f.text_field :first_name, placeholder: "例)彩"
      .field
        = f.label :family_name_kana
        %br/
        = f.text_field :family_name_kana, placeholder: "例)ヤマダ"
      .field
        = f.label :first_name_kana
        %br/
        = f.text_field :first_name_kana, placeholder: "例)アヤ"
      .field
        = f.label :birthday
        %br/
        = f.date_select :birthday, {}, {}
      .field
        =recaptcha_tags
      .actions
        =f.submit '次へ進む'

    -# #form--address
    -#   %h2 お届け先住所の入力
    -# #form--payment
    -#   %h2 支払い方法の入力
    -# #form--complete
    -#   %h2 登録完了
  = render "devise/shared/links"
